{
  "name": "Webthings-mysensors-adapter",
  "display_name": "MySensors",
  "version": "0.0.1",
  "description": "MySensors adapter for Mozilla WebThings Gateway",
  "author": "CreateCandle",
  "main": "main.py",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "mysensors",
    "arduino"
  ],
  "homepage": "https://github.com/createcandle",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/createcandle/Webthings-mysensors-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/createcandle/Webthings-mysensors-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "lib",
    "main.py",
    "pkg/__init__.py",
    "pkg/mysensors_adapter.py",
    "pkg/mysensors_device.py",
    "pkg/mysensors_property.py",
    "pkg/util.py"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "python3 {path}/main.py",
    "config": {
      "Gateway": "USB Serial gateway",
      "USB device name": "ttyUSB0"
    },
    "schema": {
      "type": "object",
      "required": [
        "Gateway"
      ],
      "properties": {
        "Gateway": {
	      "type": "string",
          "enum": [ "USB Serial gateway", "Module connected to GPIO pins" ],
          "description": "How are you talking to the MySensors network? Via a USB device is most common."
	    },
        "USB device name": {
          "type": "string",
          "description": "If you are using a USB connected gateway, What is the technical name of the USB device? You can try 'ttyUSB0'."
        },
      }
    }
  }
}
