{
  "name": "mysensors-adapter",
  "display_name": "MySensors",
  "version": "0.0.4",
  "description": "MySensors add-on for Mozilla WebThings Gateway",
  "author": "CreateCandle",
  "main": "bootstrap.py",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "mysensors",
    "arduino"
  ],
  "homepage": "https://github.com/createcandle/Webthings-mysensors-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/createcandle/Webthings-mysensors-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/createcandle/Webthings-mysensors-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "bootstrap.py",
    "main.py",
    "pkg/__init__.py",
    "pkg/mysensors_adapter.py",
    "pkg/mysensors_device.py",
    "pkg/mysensors_property.py",
    "pkg/util.py",
    "requirements.txt",
    "setup.cfg"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "python3 {path}/bootstrap.py",
    "config": {
      "Gateway": "USB Serial gateway",
      "USB device name": "/dev/ttyUSB0",
      "IP address": "127.0.0.1",
      "Persistence": false
    },
    "schema": {
      "type": "object",
      "required": [
        "Gateway",
        "Persistence"
      ],
      "properties": {
        "Gateway": {
          "type": "string",
          "enum": [
            "USB Serial gateway",
            "Ethernet gateway",
            "MQTT gateway"
          ],
          "description": "How are you talking to the MySensors network? Via a USB device is most common."
        },
        "USB device name": {
          "type": "string",
          "description": "If you are using a USB connected gateway, what is the technical name of the USB device? You can try '/dev/ttyUSB0' or '/dev/ttyACM0'."
        },
        "IP address": {
          "type": "string",
          "description": "If you are using an ethernet gateway, what is its IP address? You can try '127.0.0.1' if it's installed on the same computer as the Mozilla WebThings gateway."
        },
        "Persistence": {
          "type": "boolean",
          "description": "Enabling persistence can help avoid issues with duplicate node ID's."
        }
      }
    }
  }
}
